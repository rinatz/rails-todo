<%= turbo_frame_tag @task do %>
  <% content_for :title, "Editing task" %>

  <%= form_with(model: @task, local: false) do |form| %>
    <%= form.text_field :title %>
    <%= form.submit "更新" %>
  <% end %>

  <%= button_to "削除", @task, method: :delete, data: { turbo_confirm: "本当に削除しますか？" } %>
  <%= link_to "キャンセル", tasks_path %>
<% end %>
